---
import ContactMeSec from './ContactMeSec.astro';
import Footer from './Footer.astro';

const { project } = Astro.props;
---

<section class='relative'>
  <main class='max-container overflow-x-hidden'>
    <section class='h-screen'>
      <div class='flex flex-col pt-28 items-start'>
        <h1 class='text-5xl font-bold text-center'>{project.data.name}</h1>
        <div class='flex justify-center items-center mt-4'>
          <a
            href={project.data.link_repo}
            target='_blank'
            class='text-lg font-bold text-center'
          >
            Repo
          </a>
          <a
            href={project.data.link_app}
            target='_blank'
            class='text-lg font-bold text-center ml-4'
          >
            App
          </a>
        </div>
        <p class='pt-10'>
          <slot />
        </p>
        <div class='pt-10 flex flex-wrap gap-4'>
          {
            project.data.goals.map((e) => (
              <div class='w-52 flex flex-col gap-3'>
                <h2 class='text-2xl font-bold'>{e.title}</h2>
                <p>{e.goal}</p>
              </div>
            ))
          }
        </div>
      </div>
      <!-- <HeroProject
      name={project.data.name}
      stack={project.data.stack}
      link_repo={project.data.link_repo}
      link_app={project.data.link_app}
      mainImage={project.data.images[0]}
    /> -->
      <!-- <DescriptionSec CodingImg={CodingImg}>
      <slot />
    </DescriptionSec>
    <GoalsSec goals={project.data.goals} />
    <GridSec images={project.data.images} />
    -->
    </section>
  </main>
  <ContactMeSec />
  <Footer />
</section>
