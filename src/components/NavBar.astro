<script>
  const navbar = document.getElementById('nav-bar') as HTMLDivElement;
  let movement = 0;
  window.addEventListener('scroll', () => {
    if (movement < window.scrollY) {
      navbar.classList.toggle('nabvar__hide');
    } else {
      navbar.classList.toggle('nabvar__hide');
    }
    movement = window.scrollY;
  });
</script>

